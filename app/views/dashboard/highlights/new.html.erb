<% page_title = " - Add Highlight"%>
<% content_for :title, page_title %>
<%= render(:partial=>"/layouts/navbar") %>

<div class="dashboard">
	<div class="container">
		<div class="row">	
			<div class="col-xs-12">
				<div class="row">
					<div class="col-xs-4">
						<%= render(:partial=>"dashboard/layouts/leftcolumn") %>	
					</div>
					
					<div class="col-xs-8">
						<div class="lightbox-blue">
							<div class="dahsboard-right">
								<div class="row">
									<div class="col-xs-12">
										<h2 class="caption">Add Highlight</h2>
									</div>										
								</div>	
								<div class="row">
									<div class="col-xs-12">
										
										<%= error_messages_for(@highlight) %>
										
										<%= form_for(@highlight, url: {:action=>"create"}, html: { :id=>"addHighlightForm", :class=>"editform" } ) do |f| %>
											
											<%= render(:partial => "form", :locals => {:f => f}) %>
																						
											<div class="row">
												<div class="col-xs-12">
													<%= f.submit "Add Highlight", :class=>"btn btn-success" %>													
												</div>
											</div>	
											
										<% end %>
										
									</div>
								</div>																						
							</div>
						</div>
					</div>
				</div>	
			</div>							
		</div>					
	</div>
</div>				

<%= render(:partial=>"/layouts/footer") %>