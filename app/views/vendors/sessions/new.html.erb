<% page_title = " - Vendor SignIn"%>
<% content_for :title, page_title %>
<% content_for :header do %>
	<%= javascript_include_tag "plugins/jquery-validation/jquery.validate.js", 'data-turbolinks-track' => true %>
	<%= javascript_include_tag "plugins/jquery-validation/custom-methods.js", 'data-turbolinks-track' => true %>
<% end %>
<%= render(:partial=>"/layouts/navbar") %>
<div class="register">
					<div class="container">
						<div class="row">
							<div class="col-xs-12">
								<div class="register-form">
									<div class="left">
										<h3>Vendor SignIn</h3>
										<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {id: "signinForm"}) do |f| %>									  		
									  		
									  		<div>
									  			<%= f.email_field :email, required: true, placeholder: "Email" %>
									  		</div>
									  		
									  		<div>
									    		<%= f.password_field :password, autocomplete: "off", required: true, placeholder: "Password" %>
									    	</div>
									
										  	<% if devise_mapping.rememberable? -%>
										    	<div>
										    		<%= f.check_box :remember_me %> <%= f.label :remember_me %>
										    	</div>
										  	<% end -%>
									
									  		<div>
									  			<%= f.submit "Sign me in", class: "btn btn-danger" %>
									  		</div>
										<% end %>

										<%= render "devise/shared/links" %>									
										
									</div>
									
									<div class="right">
										
										<h4>Why organize event through PartyUp?</h4>
										<ul>
											<li><i class="fa fa-star"></i> 100% Free to Register</li>
											<li><i class="fa fa-ban"></i> Stop searching for clients</li>
											<li><i class="fa fa-inr"></i> Bid on client request who are ready to organise Event</li>
											<li><i class="fa fa-thumbs-up"></i> Get selected by the client</li>
											<li><i class="fa fa-heart"></i> Serve the client at your best</li>
											<li><i class="fa fa-trophy"></i> Get paid by the client</li>
											<li>Simple steps to offer your valuable service</li>
										</ul>
										<h4 class="vendor-register-link">Are you an Organiser? Then SignIn <%= link_to("here",new_organiser_session_path) %></h4>
										
									</div>
									
								</div>
							</div>
						</div>
					</div>
				</div>

<%= render(:partial=>"/layouts/footer") %>

<% content_for :footer do %> 
        
	<%= javascript_tag do %>
		
		//Request Form Validation		
		$( "#signinForm" ).validate();
		    			
	<% end %>	
			
<% end %>
