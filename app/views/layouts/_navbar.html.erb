<header>
	<div class="container">
		<div class="row">
			<div class="col-xs-2">
				<%= link_to("PartyUp", "/", :class=> "logo") %>				
			</div>
			<div class="col-xs-10">
				
				<nav>
					<ul>
						
						<%= nav_link "Browse Vendors", vendors_path %>						
						
						<%= nav_link "Browse Requests", requests_path %>
								         			            		
			           	<% if organiser_signed_in? || vendor_signed_in? %>
			           		<li class="dropdown">
					          	<a href="#" class="dropdown-toggle" data-toggle="dropdown">
					          		<i class="glyphicon glyphicon-user"></i>	
					          		<% if organiser_signed_in? %>				          		
	                        			<span><%= full_name_object(current_organiser) %> <i class="caret"></i></span>
	                        		<% elsif vendor_signed_in? %>
	                        			<span><%= full_name_object(current_vendor) %> <i class="caret"></i></span>
	                        		<% end %>
					          	</a>
					            <ul class="dropdown-menu">	
					            	<li><%= link_to("Dashboard", authenticated_root_path)%></li>
					            	<% if organiser_signed_in? %>						           	
						           		<li><%= link_to("Logout", destroy_organiser_session_path, :method=>:delete )%></li>
						           	<% elsif vendor_signed_in? %>
						           		<li><%= link_to("Logout", destroy_vendor_session_path, :method=>:delete )%></li>
						           	<% end %>
						       	</ul>
				       		</li>				       	
			           	<% elsif %>
				        	<%= nav_link "Register", new_organiser_registration_path %>
				           	<%= nav_link "Sign In", new_organiser_session_path %>
			          	<% end %>
			          	
					</ul>								
				</nav>				
			</div>
		</div>
	</div>				
</header>	

<% if controller.controller_name=="welcome" && controller.action_name=="index" %>
	<article>		
	
		<div class="index-intro">
			<div class="container">
				<div class="row">
					<div class="col-xs-5">
						<div class="message">
							<%= image_tag "logo.png", :class=>"logo", :alt=>"Logo" %>						
							<div class="intro-text">
								<h4>Plan your events more easily</h4>
								<span>Get quotes from vendors for your personal or professional event. Compare the pricing and let the vendor contact you directly. All your event needs in one place.</span>
								<%= link_to("Start Planing", new_organiser_session_path, :class=>"btn btn-danger")%>								
								<p>(YES it's Free)</p>
							</div>
						</div>					
					</div>
					<div class="col-xs-6 col-xs-offset-1">
						<%= image_tag "image1.jpg", :class=>"intro-image", :alt=>"Intro Image" %>			
					</div>
				</div>
			</div>
		</div>
	
	</article>
<% end %>

<% flash.each do |name, msg| %>
	<% if name=="error" %>
		<div class="alert alert-danger">
			<%= msg.html_safe %>
			<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
		</div>
	<% elsif name=="alert" %>
		<div class="alert alert-warning">
			<%= msg.html_safe %>
			<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
		</div>
	<% elsif name=="notice" %>
		<div class="alert alert-info">
			<%= msg.html_safe %>
			<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
		</div>
	<% elsif name=="success" %>
		<div class="alert alert-success">
			<%= msg.html_safe %>
			<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
		</div>
	<% end %>		
<% end %>
