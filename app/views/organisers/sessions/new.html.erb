<% page_title = " - Organiser SingnIn"%>
<% content_for :title, page_title %>
<% content_for :header do %>
	<%= javascript_include_tag "plugins/jquery-validation/jquery.validate.js", 'data-turbolinks-track' => true %>
	<%= javascript_include_tag "plugins/jquery-validation/custom-methods.js", 'data-turbolinks-track' => true %>
<% end %>
<%= render(:partial=>"/layouts/navbar") %>
<div class="register">
					<div class="container">
						<div class="row">
							<div class="col-xs-12">
								<div class="register-form">
									<div class="left">
										<div class="inner">
											
											<h3>Organiser SignIn</h3>
											<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {id: "signinForm"}) do |f| %>									  		
										  		
										  		<div>
										  			<%= f.email_field :email, required: true, placeholder: "Email" %>
										  		</div>
										  		
										  		<div>
										    		<%= f.password_field :password, autocomplete: "off", required: true, placeholder: "Password" %>
										    	</div>
										
											  	<% if devise_mapping.rememberable? -%>
											    	<div>
											    		<%= f.check_box :remember_me %> <%= f.label :remember_me %>
											    	</div>
											  	<% end -%>
										
										  		<div>
										  			<%= f.submit "Sign me in", class: "btn btn-danger" %>
										  		</div>
											<% end %>
											
											<div>
												<%= render "devise/shared/links" %>
											</div>								
													
										</div>
									</div>
									
									<div class="right">
										<div class="inner">
											<h4>Why organize event through PartyUp?</h4>
											<ul>
												<li><i class="fa fa-star"></i> 100% Free to submit Event Requests</li>
												<li><i class="fa fa-trash-o"></i> Delete the stress of finding the right vendor</li>
												<li><i class="fa fa-inr"></i> Get quotes from lot of vendors</li>
												<li><i class="fa fa-thumbs-up"></i> Choose the best vendor</li>
												<li><i class="fa fa-phone"></i> Let the choosen vendor contact you directly</li>
											</ul>
											<h4 class="vendor-register-link">Are you a Vendor? Then SignIn <%= link_to("here",new_vendor_session_path) %></h4>
										</div>
									</div>
									
								</div>
							</div>
						</div>
					</div>
				</div>

<%= render(:partial=>"/layouts/footer") %>

<% content_for :footer do %> 
        
	<%= javascript_tag do %>
		
		//Request Form Validation		
		$( "#signinForm" ).validate();
		    			
	<% end %>	
			
<% end %>
