<% page_title = " - Retrieve Account Password"%>
<% content_for :title, page_title %>
<% content_for :header do %>
	<%= javascript_include_tag "plugins/jquery-validation/jquery.validate.js", 'data-turbolinks-track' => true %>
	<%= javascript_include_tag "plugins/jquery-validation/custom-methods.js", 'data-turbolinks-track' => true %>
<% end %>
<%= render(:partial=>"/layouts/navbar") %>

<div class="register">
	<div class="container">
		<div class="row">
			<div class="col-xs-12">
				<div class="register-form passwordretrieve-form">
					
					<h3>Forgot your password?</h3>
					
					<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, :id=>"passwordRetrieve" }) do |f| %>
					  <%= devise_error_messages! %>
					
					  <div>
					  	<%= f.label :email %><br/>
					  	<%= f.email_field :email, autofocus: true, :id=>"retrieveEmail", required: true, :placeholder=>"Enter your email" %><br />
					  	<label style="display: none;" for="retrieveEmail" class="error"></label>
					  </div>
					
					  <div>
					  	<%= f.submit "Send me reset password instructions", class: "btn btn-danger" %>
					  </div>
					
					<% end %>
	
					<%= render "devise/shared/links" %>
					
				</div>
			</div>
		</div>
	</div>
</div>

<%= render(:partial=>"/layouts/footer") %>

<% content_for :footer do %> 
        
	<%= javascript_tag do %>
		
		//Forgot Password Form Validation		
		$( "#passwordRetrieve" ).validate();	
		
	<% end %>	
			
<% end %>